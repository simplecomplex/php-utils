{
    "name": "simplecomplex/utils",
    "type": "library",
    "description": "Dependency injection container abstraction; PHP CLI made easy; various basic utilities.",
    "keywords": ["utils","strict types", "PHP"],
    "homepage": "https://github.com/simplecomplex/php-utils",
    "license": "MIT",
    "authors": [
        {
            "name": "Jacob Friis Mathiasen",
            "email": "jacob.friis@simplecomplex.net"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-ctype": "*",
        "psr/container": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "suggest": {
        "ext-mbstring": "PHP native multibyte features.",
        "simplecomplex/inspect": "Utils' CLI command features do NOT work without Inspect, however CliEnvironment do."
    },
    "autoload": {
        "psr-4": {
            "SimpleComplex\\Utils\\": "src/",
            "SimpleComplex\\Tests\\Utils\\": "tests/src/"
        }
    }
}
